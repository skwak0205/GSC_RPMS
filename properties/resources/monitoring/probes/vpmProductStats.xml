<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<probe name="vpmProductStats" kind="default" unplug="true" needs_key_store="true">
    <option name="vpmProductStats" shortname="vpmProductStats" optional="true" hidden="true">
        <description>
            Generate VPM Product Statistics events
        </description>
        <parameter name="xmlStatsPath" optional="true" multiple="false">
            <short-description>
                XML statistics path
            </short-description>
            <description>
                Path of XML fie generated by the command extracting products statistics
            </description>
        </parameter>
    </option>
    <implementation>
        <class>
            com.dassault_systemes.vplm.monitoring.ProductStatistics
        </class>
    </implementation>
    <!-- runs every 12 hours-->
    <period minutes="720"/>
</probe>
