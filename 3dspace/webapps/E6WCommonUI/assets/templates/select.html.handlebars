
    {{#if label}}
        	<label>{{label}}
       		{{~#if required~}}
            		<span class="required-field-indicator">*</span>
            {{~/if~}}
            {{~#if customButtons~}}
            <span class="actions">
               {{~#each customButtons~}}
                  <button class="btn custom-button" data-custom-button-index="{{@index}}" title= "{{toolTip}}">
                      <span class="fonticon {{iconClass}}"></span>
                  </button>
               {{~/each~}}
            </span>
            {{~/if~}}
         </label>
        {{/if}}
  <div class="field-group">
       <div class="input-group-wrapper">
         <div class="input-group">
        {{~#if readWrite~}}
            \{{~#if canEdit~}}
            <select class="form-control data-entry" value="\{{ {{name}}.actualValue }}">
                    {{#each values}}
	                   <option value="{{actualValue}}">{{displayValue}}</option>
	                {{/each}}
            </select>
            <span class="form-control-helper-text">{{helperText}}</span>
	       \{{~else~}}
	           <span class="read-only">\{{~ readOnlyValue {{name}}.displayValue ~}}</span>
	       \{{~/if~}}
        {{~else~}}
            <span class="read-only">\{{~ readOnlyValue {{name}}.displayValue ~}}</span>
        {{~/if~}}
      </div>
    </div>
  </div>
